@{

    var user = Session["TaiKhoan"] as BookStoreOnline.Models.Customer;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QUANLYNHASACH</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <!-- header     -->
    <div class="header">
        <div class="container head-content">
            <div class="row">
                <div class="col-lg-3 logo">
                    <a href="@Url.Action("Index","Home")"><img src="https://cdn.haitrieu.com/wp-content/uploads/2021/09/Logo-DH-Ngoai-Ngu-Tin-Hoc-HUFLIT.png" alt=""></a>
                </div>
                <div class="col-lg-6 head-middle">

                    @using (Html.BeginForm("Search", "Category", FormMethod.Post))
                    {
                        <input type="text" name="inputString" placeholder="Nhập từ khóa tìm kiếm...">
                        <button type="submit"><i class="bi bi-search"></i></button>
                    }
                </div>
                <div class="col-lg-3 head-right">
                    @if (user == null)
                    {
                        <a href="@Url.Action("Login","User")" class="cart-link"><i class="bi bi-cart-fill"></i><span class="giohang">Giỏ hàng</span><span class="icon-down"><i class="bi bi-chevron-down"></i></span></a>
                       

                    }
                    else
                    {
                        { Html.RenderAction("CartPartial", "Cart"); }
                    }

                    @if (user == null)
                    {
                        <a href="@Url.Action("Login","User")" class="custom-btn btn-7">Đăng nhập</a>
                        <a href="@Url.Action("SignUp","User")" class="custom-btn btn-7" style="margin-left:5px">Đăng ký</a>
                    }
                    else
                    {
                        <div class="dropdown show">
                            <a class="user-link-option" href="" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="bi bi-person-circle"></i>
                                <span style="font-size: 25px;"> @user.Name</span>

                            </a>


                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="@Url.Action("Index/"+user.ID,"Order")">Đơn hàng của bạn</a>
                                <a class="dropdown-item" href="@Url.Action("LogOut","User")">Đăng xuất</a>

                            </div>
                        </div>

                    }

                </div>
            </div>
        </div>

    </div>
    <!-- end-header -->
    <!-- nav -->
    <div class="nav">
        <div class="container nav-list">
            <div class="row" style="align-items: center;">
                <div class="col-lg-1">


                    @{Html.RenderAction("GetPartialCategoryNav", "CategoryPartial");}
                </div>
                <div class="col-lg-1"></div>

                <div class="col-lg-7">

                    <nav class="navbar navbar-expand-lg navbar-light">

                        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                            <div class="navbar-nav">
                                <a class="nav-item nav-link" href="@Url.Action("Index","Home")">Trang chủ <span class="sr-only">(current)</span></a>
                                <a class="nav-item nav-link" href="@Url.Action("GetAllBook","Category")">Tất cả sản phẩm</a>
                                <a class="nav-item nav-link" href="@Url.Action("Index","Introduce")">Giới thiệu</a>
                                <a class="nav-item nav-link" href="@Url.Action("Index", "Contact")">Liên hệ</a>


                            </div>
                        </div>
                    </nav>

                </div>
            </div>
        </div>
    </div>
    <!-- end-nav -->
    @RenderBody()



    <div class="helping-selection">
        <div class="container">
            <div class="row help-list">
                <div class="col-lg-3">
                    <div class="help-item">
                        <i class="bi bi-truck"></i><br />
                        <h6>Giao hàng miễn phí</h6>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="help-item">
                        <i class="bi bi-arrow-counterclockwise"></i><br />
                        <h6>Miễn phí đổi trả</h6>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="help-item">
                        <i class="bi bi-shield-shaded"></i><br />
                        <h6>Bảo mật thông tin</h6>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="help-item">
                        <i class="bi bi-gift"></i><br />
                        <h6>Khuyến Mãi</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer>

        <div class="footer-container">

            <div class="col footer-item col-four">
                <h2>Về chúng tôi </h2>
                <p class="text-footer">
                    Giới thiệu về nhà sách
                </p>
                <p class="text-footer">
                    Hệ thống nhà sách
                </p>
                <p class="text-footer">
                    Điều khoản sử dụng
                </p>
                <p class="text-footer">
                    Chính sách bảo mật
                </p>
                <p class="text-footer">
                    Chính sách bán hàng
                </p>
                <p class="text-footer">
                    Phương thức vận chuyển
                </p>
            </div>



            <div class="col footer-item col-four">

                <h2>Tài khoản của tôi </h2>

                <p class="text-footer">
                    Đăng nhập
                </p>
                <p class="text-footer">
                    Tạo tài khoản
                </p>

            </div>
            <div class="col footer-item col-four">
                <h2>Hỗ trợ khách hàng</h2>
                <p class="text-footer">
                    Các câu hỏi thường gặp
                </p>
                <p class="text-footer">
                    Chính sách Đổi/Trả hàng
                </p>
                <p class="text-footer">
                    Quy định viết bình luận
                </p>
            </div>
            <div class="col footer-item col-four">
                <h2>Liên hệ chúng tôi </h2>
                <p class="text-footer">
                    Hotline:00000000000<br>
                    Email:Nhasach@gmail.com
                </p>
                <ul class="social-icons">
                    <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                    <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                    <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                    <li><a href="#"><i class="fab fa-youtube"></i></a></li>
                    <li><a href="#"><i class="fab fa-tiktok"></i></a></li>
                </ul>

            </div>

        </div>
        <div class="copyright">
            &copy; 2023 Nhà Sách . All rights reserved.
        </div>

    </footer>


    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>
