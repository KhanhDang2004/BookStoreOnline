@{
    ViewBag.Title = "Home Page";
}
@model IEnumerable<BookStoreOnline.Models.SANPHAM>

@{
    var price = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
    var user = Session["TaiKhoan"] as BookStoreOnline.Models.KHACHHANG;
}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
<style>
    .carousel-inner {
        height: 100%;
    }

        .carousel-inner img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .prod-item {
        margin-bottom: 30px;
    }

    .card-title {
        font-size: 1.2rem;
        margin-bottom: 15px;
    }

    .card-text {
        margin-bottom: 15px;
    }

    .custom-btn {
        background-color: #007bff;
        color: white;
        border-radius: 50px;
        padding: 10px 20px;
        text-align: center;
    }

        .custom-btn:hover {
            background-color: #0056b3;
            color: white;
        }

    .see-more {
        text-decoration: none;
        color: #007bff;
    }

        .see-more:hover {
            text-decoration: underline;
            color: #0056b3;
        }

    .title-prod h5 {
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 2;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Images/Cardgame_Slide_T6_840x320.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Images/MangaWeek_T524_MangaFiesta_Slidebanner_840x320.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Images/Tapvo_SlideBanner_T06.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container body-page mt-5">
    <h3>Sách hay tuyển chọn</h3>
    <hr />
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 prod-item">
                <div class="card">
                    <a href="@Url.Action("Index", "ProductDetail", new { id = item.MaSanPham })">
                        <img class="card-img-top" src="~/Images/@item.Anh" alt="@item.TenSanPham">
                    </a>
                    <div class="card-body">
                        <a href="@Url.Action("Index", "ProductDetail", new { id = item.MaSanPham })" class="title-prod">
                            <h5 class="card-title">@item.TenSanPham</h5>
                        </a>
                        <h5 style="color: darkred;">@String.Format(price, "{0:c0}", item.Gia)</h5>
                        <p class="card-text rating-card">
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <span style="color: black;">(0 đánh giá)</span>
                        </p>
                        <div class="text-center">
                            @if (user != null)
                            {
                                <a href="@Url.Action("AddSingleProduct", "Cart", new { id = item.MaSanPham })" class="btn custom-btn">Mua</a>
                            }
                            else
                            {
                                <a href="@Url.Action("Login", "User")" class="btn custom-btn">Mua</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row justify-content-center mt-4">
        <a href="@Url.Action("GetAllBook", "Category")" class="see-more">
            <h4>Xem thêm</h4>
        </a>
    </div>
</div>