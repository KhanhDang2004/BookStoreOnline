@model IEnumerable<BookStoreOnline.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card-body">
    <h2>Danh sách đơn hàng</h2>
</div>
 <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped text-center">
                <tr>
                    <th>Khách hàng</th>
                    <th>Ngày đặt</th>
                    <th>Địa chỉ giao hàng</th>
                    <th>Trạng thái đơn hàng</th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Customer.NameCustomer</td>
                        <td>@String.Format("{0:dd/MM/yyyy}", item.DateOrder)</td>
                        <td>@item.Address</td>
                        @if (item.Status == 0)
                        {
                            <td style="color:red">Chưa xác nhận</td>
                        }
                        else
                        {
                            <td style="color:forestgreen">Đã xác nhận</td>
                        }
                    <td>
                        <a href="@Url.Action("Details/"+item.IDOrder,"OrdersAdmin")" class="btn btn-info">Xem chi tiết</a> 
                    </td>
                    </tr>
                }


            </table>

        </div>
    </div>
